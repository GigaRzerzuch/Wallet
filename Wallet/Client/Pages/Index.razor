@page "/"
@inject IToastService ToastSerice

<AuthorizeView>
    <Authorized>
        <h1>Hi, @context.User.Identity.Name. Welcome back</h1>
        <Overlook></Overlook>
    </Authorized>
    <NotAuthorized>
        <h1>Welcome</h1>
        <Login></Login>
    </NotAuthorized>
</AuthorizeView>

<button class="btn btn-primary mt-3" @onclick="Bom">Click me</button>
@code{
    private void Bom()
    {
        ToastSerice.ShowSuccess("Booooooooooooooooooooooooooooom");
    }
}